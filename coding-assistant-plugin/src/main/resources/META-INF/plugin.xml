<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>io.github.nbirillo.coding.assistant</id>
    <name>Hint Generation Algorithm</name>
    <vendor url="https://research.jetbrains.org/">JetBrains Research</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <description><![CDATA[
    A PyCharm plugin for generating the personalized hints
    ]]></description>

    <xi:include href="/META-INF/coding-assistant-core-settings.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <appStarter implementation="org.jetbrains.research.ml.coding.assistant.runner.SolutionSpaceRunner"/>
        <appStarter implementation="org.jetbrains.research.ml.coding.assistant.runner.HintGenerateRunner"/>
    </extensions>
</idea-plugin>
